{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", ":automergeLinters", ":automergeTesters"],
  "timezone": "Asia/Tokyo",
  "platformAutomerge": true,
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "schedule": ["* 6 * * 5"]
  },
  "pin": {
    "automerge": true
  },
  "patch": {
    "groupName": "all dependencies",
    "automerge": true
  },
  "minor": {
    "automerge": true
  },
  "major": {},
  "digest": {
    "automerge": true
  },
  "labels": ["dependencies", "renovate"]
}
